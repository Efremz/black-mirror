<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="BlackMirror.Theme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textViewStyle">@style/BlackMirror.Theme.TextView</item>
    </style>

    <style name="BlackMirror.Theme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
